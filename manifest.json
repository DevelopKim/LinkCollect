{
  "manifest_version": 3,
  "name": "링크 수집기",
  "version": "1.0.0",
  "description": "웹 페이지에서 특정 도메인의 링크를 추출하여 다운로드합니다.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  }
}
